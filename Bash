cd TeOS/system/kernel
i686-elf-gcc -ffreestanding -c main.c -o main.o
i686-elf-ld -Ttext 0x1000 -o kernel.bin main.o --oformat binary
mkdir -p isodir/boot/grub

cp kernel.bin isodir/boot/
cp ../boot/grub.cfg isodir/boot/grub/
grub-mkrescue -o TeOS.iso isodir

TeOS/
├─ system/
│   ├─ kernel/main.c
│   ├─ boot/grub.cfg
│   └─ config.h
├─ apps/       → tüm uygulamalar
├─ data/       → kullanıcı verileri
└─ resources/  → logo, ses, animasyon

cd TeOS/system/kernel
i686-elf-gcc -ffreestanding -c main.c -o main.o
i686-elf-ld -Ttext 0x1000 -o kernel.bin main.o --oformat binary

mkdir -p isodir/boot/grub
cp kernel.bin isodir/boot/
cp boot/grub.cfg isodir/boot/grub/
grub-mkrescue -o TeOS.iso isodir

qemu-system-i386 -cdrom TeOS.iso

sudo dd if=TeOS.iso of=/dev/sdX bs=4M status=progress && sync
cd /path/to/TeOS
mkdir -p isodir/boot/grub
cp system/kernel/kernel.bin isodir/boot/
cp system/boot/grub.cfg isodir/boot/grub/
grub-mkrescue -o TeOS.iso isodir

sudo dd if=TeOS.iso of=/dev/sdX bs=4M status=progress && sync
