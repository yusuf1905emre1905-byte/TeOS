#include <QApplication>
#include <QWidget>
#include <QPushButton>
#include <QMessageBox>
#include <QVBoxLayout>
#include <QLabel>
#include <QJsonDocument>
#include <QJsonObject>
#include <QFile>
#include <QString>
#include <vector>
#include <functional>

struct AppIcon {
    QString name;
    QString emoji;
    std::function<void()> action;
};

QJsonObject loadLanguage(const QString& langFile) {
    QFile file(langFile);
    if (!file.open(QIODevice::ReadOnly)) return QJsonObject();
    QJsonDocument doc = QJsonDocument::fromJson(file.readAll());
    file.close();
    return doc.object();
}

class MainWindow : public QWidget {
public:
    MainWindow(const QJsonObject& lang, const std::vector<AppIcon>& apps) {
        setWindowTitle("ğŸ”¨ TeOS v1.0 ğŸ”¨");
        resize(1000, 700);

        QVBoxLayout* layout = new QVBoxLayout();
        QLabel* welcome = new QLabel(lang["welcome"].toString());
        layout->addWidget(welcome);

        for(auto& app : apps) {
            QPushButton* btn = new QPushButton(app.name + " " + app.emoji);
            layout->addWidget(btn);
            QObject::connect(btn, &QPushButton::clicked, app.action);
        }

        QPushButton* shutdownBtn = new QPushButton(lang["shutdown"].toString());
        layout->addWidget(shutdownBtn);
        QObject::connect(shutdownBtn, &QPushButton::clicked, [](){
            QMessageBox::information(nullptr, "TeOS", "Bilgisayar kapanÄ±yor...");
            qApp->quit();
        });

        setLayout(layout);
    }
};

