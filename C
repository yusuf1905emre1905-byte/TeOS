// mouse.c ‚Äî TeOS Fare Sistemi

#include "mouse.h"
#include <stdio.h>

int mouse_x = 50;
int mouse_y = 50;

// Ekran sƒ±nƒ±rlarƒ±
#define SCREEN_WIDTH  800
#define SCREEN_HEIGHT 600

void mouse_move(int dx, int dy) {
    mouse_x += dx;
    mouse_y += dy;

    // Sƒ±nƒ±rlar
    if (mouse_x < 0) mouse_x = 0;
    if (mouse_y < 0) mouse_y = 0;
    if (mouse_x > SCREEN_WIDTH) mouse_x = SCREEN_WIDTH;
    if (mouse_y > SCREEN_HEIGHT) mouse_y = SCREEN_HEIGHT;

    printf("[TeMouse] X:%d  Y:%d\n", mouse_x, mouse_y);
}

void mouse_click(int button) {
    if (button == 1)
        printf("[TeMouse] Sol tƒ±klama! (Se√ßim yapƒ±ldƒ±)\n");
    else if (button == 2)
        printf("[TeMouse] Saƒü tƒ±klama! (Men√º a√ßƒ±lƒ±yor)\n");
    else if (button == 3)
        printf("[TeMouse] Orta tƒ±klama! (Kaydƒ±rma)\n");
}

