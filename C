void kilitEkrani(char* saved_pin) {
    char pin[10];
    printf("\nüîí Ekran kilitlendi. PIN girin: ");
    scanf("%s", pin);

    if (strcmp(pin, saved_pin) == 0) {
        printf("[TeOS] Kilit a√ßƒ±ldƒ± ‚úÖ\n");
    } else {
        printf("[TeOS] Hatalƒ± PIN! Sistem kilitli kalƒ±yor.\n");
    }
}

void anaMenu(char* saved_pin) {
    int secim;
    printLogo();

    while (1) {
        printf("\n===== üî® TeOS Ana Men√ºs√º üî® =====\n");
        printf("[1] Uygulamalar\n");
        printf("[2] Ayarlar\n");
        printf("[3] TeStore\n");
        printf("[4] TekonAI\n");
        printf("[5] Bilgisayarƒ± Kapat\n");
        printf("[6] Yeniden Ba≈ülat\n");
        printf("[7] Ekranƒ± Kilitle\n");
        printf("[0] √áƒ±kƒ±≈ü\n");

        // Fare ile tƒ±klama sim√ºlasyonu
        printf("\nFare X:%d Y:%d\n", mouse_x, mouse_y);
        printf("Se√ßiminiz (1-7): ");
        scanf("%d", &secim);

        switch (secim) {
            case 1: printf("[TeOS] Uygulamalar a√ßƒ±lƒ±yor...\n"); break;
            case 2: printf("[TeOS] Ayarlar a√ßƒ±lƒ±yor...\n"); break;
            case 3: printf("[TeOS] TeStore a√ßƒ±lƒ±yor...\n"); break;
            case 4: printf("[TeOS] TekonAI aktif! üí¨\n"); break;
            case 5: te_shutdown(); break;
            case 6: te_restart(); break;
            case 7: kilitEkrani(saved_pin); break;
            case 0: printf("[TeOS] √áƒ±kƒ±≈ü yapƒ±lƒ±yor...\n"); return;
            default: printf("Ge√ßersiz se√ßim!\n"); break;
        }
    }
}

int main() {
    char saved_pin[10] = "2580"; // √ñrnek PIN; user.cfg'den okunabilir
    anaMenu(saved_pin);
    return 0;
}

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h> // sleep() i√ßin Linux

// ------------------- Global Deƒüi≈ükenler -------------------
char saved_pin[10] = "2580"; // √ñrnek PIN
int batarya = 100;
int wifi_connected = 0;

// ------------------- Yardƒ±mcƒ± Fonksiyonlar -------------------
void printLogo() {
    printf("‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó\n");
    printf("‚ïö‚ïê‚ïê‚ñà‚ñà‚ïî‚ïê‚ïê‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù\n");
    printf("   ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó\n");
    printf("   ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïî‚ïê‚ïê‚ïù  ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë‚ïö‚ïê‚ïê‚ïê‚ïê‚ñà‚ñà‚ïë\n");
    printf("   ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë\n");
    printf("   ‚ïö‚ïê‚ïù   ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù\n");
    printf("             TeOS v1.0\n\n");
}

void kilitEkrani() {
    char pin[10];
    printf("\nüîí Ekran kilitlendi. PIN girin: ");
    scanf("%s", pin);

    if (strcmp(pin, saved_pin) == 0) {
        printf("[TeOS] Kilit a√ßƒ±ldƒ± ‚úÖ\n");
    } else {
        printf("[TeOS] Hatalƒ± PIN! Sistem kilitli kalƒ±yor.\n");
    }
}

void te_shutdown() {
    printf("[TeOS] Bilgisayar kapanƒ±yor...\n");
    exit(0);
}

void te_restart() {
    printf("[TeOS] Sistem yeniden ba≈ülatƒ±lƒ±yor...\n");
    sleep(2);
    system("clear");
    main();
}

void print_belge(const char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("HATA: Dosya okunamadƒ±!\n");
        return;
    }
    char line[256];
    printf("\nüìÑ Belge i√ßeriƒüi:\n");
    while (fgets(line, sizeof(line), fp)) {
        printf("%s", line);
    }
    fclose(fp);
    printf("\n[Yazdƒ±rma tamamlandƒ±]\n");
}

void sarjEt() {
    while (batarya < 100) {
        batarya += 10;
        printf("üîã ≈ûarj: %d%%\n", batarya);
        sleep(1);
    }
    printf("[TeOS] Batarya doldu ‚úÖ\n");
}

void wifiAyar() {
    char ssid[50], pwd[50];
    printf("Wi-Fi adƒ± olu≈üturun: ");
    scanf("%s", ssid);
    printf("≈ûifre belirleyin: ");
    scanf("%s", pwd);
    wifi_connected = 1;
    printf("Wi-Fi '%s' aktif, baƒülƒ± ‚úÖ\n", ssid);
}

// ------------------- Ana Men√º -------------------
void anaMenu() {
    int secim;
    printLogo();
    while (1) {
        printf("\n===== üî® TeOS Ana Men√ºs√º üî® =====\n");
        printf("Batarya: %d%% | Wi-Fi: %s\n", batarya, wifi_connected ? "Baƒülƒ±" : "Kapalƒ±");
        printf("[1] Uygulamalar  [2] Ayarlar  [3] TE Store\n");
        printf("[4] TekonAI       [5] Takky     [6] TeFiles\n");
        printf("[7] TeWeather     [8] TeMusic   [9] TeGallery\n");
        printf("[10] TeBrowser    [11] QuickSpace  [12] Yazƒ±cƒ±\n");
        printf("[13] Kilitle      [14] Yeniden Ba≈ülat  [15] Kapat\n");
        printf("[0] √áƒ±kƒ±≈ü\n");
        printf("Se√ßiminiz: ");
        scanf("%d", &secim);

        switch(secim) {
            case 1: printf("[TeOS] Uygulamalar a√ßƒ±lƒ±yor...\n"); break;
            case 2: wifiAyar(); break;
            case 3: printf("[TeOS] TE Store a√ßƒ±lƒ±yor...\n"); break;
            case 4: printf("[TeOS] TekonAI aktif! üí¨\n"); break;
            case 5: printf("[TeOS] Takky a√ßƒ±ldƒ± üê±\n"); break;
            case 6: printf("[TeOS] TeFiles a√ßƒ±ldƒ± üìÅ\n"); break;
            case 7: printf("[TeOS] TeWeather a√ßƒ±ldƒ± üå§Ô∏è\n"); break;
            case 8: printf("[TeOS] TeMusic a√ßƒ±ldƒ± üéµ\n"); break;
            case 9: printf("[TeOS] TeGallery a√ßƒ±ldƒ± üñºÔ∏è\n"); break;
            case 10: printf("[TeOS] TeBrowser a√ßƒ±ldƒ± üåê\n"); break;
            case 11: printf("[TeOS] QuickSpace aktif ‚ö°\n"); break;
            case 12: print_belge("ornek_belge.txt"); break;
            case 13: kilitEkrani(); break;
            case 14: te_restart(); break;
            case 15: te_shutdown(); break;
            case 0: printf("[TeOS] √áƒ±kƒ±≈ü yapƒ±lƒ±yor...\n"); return;
            default: printf("Ge√ßersiz se√ßim!\n"); break;
        }

        // Batarya sim√ºlasyonu
        batarya -= 1;
        if (batarya <= 0) {
            printf("üîã Batarya bitti! ≈ûarja takƒ±n.\n");
            sarjEt();
        }
    }
}

// ------------------- Main -------------------
int main() {
    char pin[10];
    printf("Hello User! TeOS ba≈ülatƒ±lƒ±yor...\n");
    printf("PIN girin: ");
    scanf("%s", pin);

    if (strcmp(pin, saved_pin) != 0) {
        printf("Hatalƒ± PIN! Sistem kilitli.\n");
        return 1;
    }

    anaMenu();
    return 0;
}
