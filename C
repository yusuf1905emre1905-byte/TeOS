void anaMenu(char* saved_pin) {
    int secim;
    while (1) {
        printf("\n===== üî® TeOS Ana Men√ºs√º üî® =====\n");
        printf("1Ô∏è‚É£  Uygulamalar\n");
        printf("2Ô∏è‚É£  Ayarlar\n");
        printf("3Ô∏è‚É£  TeStore\n");
        printf("4Ô∏è‚É£  TekonAI\n");
        printf("5Ô∏è‚É£  Bilgisayarƒ± Kapat\n");
        printf("6Ô∏è‚É£  Yeniden Ba≈ülat\n");
        printf("7Ô∏è‚É£  Ekranƒ± Kilitle\n");
        printf("0Ô∏è‚É£  √áƒ±kƒ±≈ü\n");
        printf("Se√ßiminiz: ");
        scanf("%d", &secim);

        switch (secim) {
            case 1:
                printf("[TeOS] Uygulamalar a√ßƒ±lƒ±yor...\n");
                break;
            case 2:
                printf("[TeOS] Ayarlar a√ßƒ±lƒ±yor...\n");
                break;
            case 3:
                printf("[TeOS] TeStore a√ßƒ±lƒ±yor...\n");
                break;
            case 4:
                printf("[TeOS] TekonAI aktif! üí¨\n");
                break;
            case 5:
                te_shutdown();
                break;
            case 6:
                te_restart();
                break;
            case 7:
                kilitEkrani(saved_pin);
                break;
            case 0:
                printf("[TeOS] √áƒ±kƒ±≈ü yapƒ±lƒ±yor...\n");
                return;
            default:
                printf("Ge√ßersiz se√ßim!\n");
                break;
        }
    }
}

int main() {
    // √ñrnek PIN; ileride user.cfg'den okunacak
    char saved_pin[10] = "2580";

    printf("TeOS Ana Men√º Y√ºkleniyor...\n");
    anaMenu(saved_pin);

    return 0;
}

