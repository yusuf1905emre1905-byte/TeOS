// power.c ‚Äî TeOS G√º√ß Y√∂netimi Sistemi

#include "power.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h> // sleep()

void power_menu() {
    int secim;

    printf("\n========== üîã TeOS G√º√ß Men√ºs√º ==========\n");
    printf("1. Bilgisayarƒ± Kapat\n");
    printf("2. Yeniden Ba≈ülat\n");
    printf("3. Ekranƒ± Kilitle\n");
    printf("4. ƒ∞ptal\n");
    printf("========================================\n");
    printf("Se√ßiminiz: ");
    scanf("%d", &secim);

    switch (secim) {
        case 1:
            te_shutdown();
            break;
        case 2:
            te_restart();
            break;
        case 3:
            te_lock();
            break;
        default:
            printf("ƒ∞≈ülem iptal edildi.\n");
            break;
    }
}

void te_shutdown() {
    printf("\n[TeOS] Sistem kapatƒ±lƒ±yor...\n");
    sleep(2);
    printf("[TeOS] G√ºle g√ºle üëã\n");
    exit(0);
}

void te_restart() {
    printf("\n[TeOS] Sistem yeniden ba≈ülatƒ±lƒ±yor...\n");
    sleep(2);
    // Normalde burada sistem yeniden ba≈ülatma komutu olurdu
    printf("[TeOS] Yeniden ba≈ülatƒ±ldƒ±!\n");
}

void te_lock() {
    char parola[20];
    printf("\n[TeOS] Sistem kilitlendi üîí\n");
    printf("Kilit a√ßmak i√ßin ≈üifre girin: ");
    scanf("%s", parola);

    if (strcmp(parola, "teos") == 0) {
        printf("[TeOS] Kilit a√ßƒ±ldƒ± ‚úÖ\n");
    } else {
        printf("[TeOS] Hatalƒ± parola! Sistem kapatƒ±lƒ±yor.\n");
        te_shutdown();
    }
}
