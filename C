int main() {
    char temail[50];
    char parola[50];
    char pin[10];
    FILE *fp;

    printf("üî® TeOS Kurulum Sihirbazƒ± üî®\n");
    printf("-----------------------------\n");
    printf("Ho≈ü geldin kullanƒ±cƒ±!\n");
    printf("L√ºtfen bir TEmail (TeOS e-postasƒ±) olu≈ütur: ");
    scanf("%s", temail);

    printf("Bir parola belirle: ");
    scanf("%s", parola);

    printf("4 haneli bir PIN belirle: ");
    scanf("%s", pin);

    fp = fopen("user.cfg", "w");
    if (fp == NULL) {
        printf("HATA: Kullanƒ±cƒ± dosyasƒ± olu≈üturulamadƒ±!\n");
        return 1;
    }

    fprintf(fp, "TEMAIL=%s\n", temail);
    fprintf(fp, "PAROLA=%s\n", parola);
    fprintf(fp, "PIN=%s\n", pin);
    fclose(fp);

    printf("\nKurulum tamamlandƒ± ‚úÖ\n");
    printf("Sistem yeniden ba≈ülatƒ±lƒ±yor...\n");
    return 0;
}
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    char temail[50], parola[50], pin[10];
    char saved_temail[50], saved_parola[50], saved_pin[10];
    FILE *fp;

    printf("üî® TeOS Giri≈ü Ekranƒ± üî®\n");
    printf("------------------------\n");

    // user.cfg dosyasƒ±nƒ± oku
    fp = fopen("user.cfg", "r");
    if (fp == NULL) {
        printf("HATA: Kullanƒ±cƒ± dosyasƒ± bulunamadƒ±! L√ºtfen √∂nce kurulum yap.\n");
        return 1;
    }

    fscanf(fp, "TEMAIL=%s\n", saved_temail);
    fscanf(fp, "PAROLA=%s\n", saved_parola);
    fscanf(fp, "PIN=%s\n", saved_pin);
    fclose(fp);

    // Kullanƒ±cƒ±dan giri≈ü bilgilerini iste
    printf("TEmail: ");
    scanf("%s", temail);

    printf("Parola: ");
    scanf("%s", parola);

    printf("PIN: ");
    scanf("%s", pin);

    // Doƒürulama
    if (strcmp(temail, saved_temail) == 0 &&
        strcmp(parola, saved_parola) == 0 &&
        strcmp(pin, saved_pin) == 0) {
        printf("\nGiri≈ü ba≈üarƒ±lƒ±! üéâ\n");
        printf("Ho≈ü geldin, %s!\n", temail);
        printf("Sistem y√ºkleniyor...\n");
        system("sleep 2"); // 2 saniye bekletir (Linux)
        system("clear");   // Ekranƒ± temizler
        printf("üî® TeOS Ana Men√ºs√º üî®\n");
        printf("1Ô∏è‚É£  Uygulamalar\n");
        printf("2Ô∏è‚É£  Ayarlar\n");
        printf("3Ô∏è‚É£  Bilgisayarƒ± Kapat\n");
    } else {
        printf("\n‚ùå Hatalƒ± giri≈ü bilgisi! L√ºtfen tekrar deneyin.\n");
    }

    return 0;
}
