#include <QApplication>
#include <QWidget>
#include <QPushButton>
#include <QMessageBox>
#include <QVBoxLayout>
#include <QLabel>
#include <QTimer>
#include <vector>
#include <QString>

// Basit uygulama simgesi sÄ±nÄ±fÄ±
struct AppIcon {
    QString name;
    QString emoji;
    std::function<void()> action;
};

class MainWindow : public QWidget {
    Q_OBJECT
public:
    MainWindow(const std::vector<AppIcon>& apps) {
        setWindowTitle("ğŸ”¨ TeOS v1.0 ğŸ”¨");
        resize(800, 600);

        QVBoxLayout* layout = new QVBoxLayout();

        QLabel* welcome = new QLabel("Hello User! TeOS BaÅŸlatÄ±ldÄ±");
        layout->addWidget(welcome);

        for(auto& app : apps) {
            QPushButton* btn = new QPushButton(app.name + " " + app.emoji);
            layout->addWidget(btn);
            QObject::connect(btn, &QPushButton::clicked, app.action);
        }

        QPushButton* shutdownBtn = new QPushButton("Kapat");
        layout->addWidget(shutdownBtn);
        QObject::connect(shutdownBtn, &QPushButton::clicked, [](){
            QMessageBox::information(nullptr, "TeOS", "Bilgisayar kapanÄ±yor...");
            qApp->quit();
        });

        setLayout(layout);
    }
};

int main(int argc, char *argv[]) {
    QApplication app(argc, argv);

    // Uygulama listesi (simÃ¼lasyon)
    std::vector<AppIcon> apps = {
        {"TEDEV", "ğŸ“¦", [](){ QMessageBox::information(nullptr, "TEDEV", "TEDEV aÃ§Ä±ldÄ±! TPK yÃ¼kleme hazÄ±r."); }},
        {"TekonAI", "ğŸ’¬", [](){ QMessageBox::information(nullptr, "TekonAI", "TekonAI aktif!"); }},
        {"Takky", "ğŸ±", [](){ QMessageBox::information(nullptr, "Takky", "Takky aÃ§Ä±ldÄ±!"); }},
        {"TeFiles", "ğŸ“", [](){ QMessageBox::information(nullptr, "TeFiles", "TeFiles aÃ§Ä±ldÄ±!"); }},
        {"TeBrowser", "ğŸŒ", [](){ QMessageBox::information(nullptr, "TeBrowser", "TarayÄ±cÄ± aÃ§Ä±ldÄ±!"); }},
        {"QuickSpace", "âš¡", [](){ QMessageBox::information(nullptr, "QuickSpace", "QuickSpace paneli aÃ§Ä±ldÄ±!"); }}
    };

    MainWindow window(apps);
    window.show();

    return app.exec();
}
